# Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
BOT_WEBHOOK_URL=https://your-domain.com
BOT_WEBHOOK_PATH=/webhook

# Database Configuration
DATABASE_URL=postgresql+asyncpg://filemanager_user:password@localhost:5432/filemanager

# Redis Configuration (optional, falls back to memory storage)
REDIS_URL=redis://localhost:6379

# Security Configuration
SECRET_KEY=your-secret-key-here-generate-random-32-char-string
ENCRYPTION_KEY=your-encryption-key-here-generate-random-32-char-string

# RSA Key Paths (will be generated automatically if not exist)
RSA_PRIVATE_KEY_PATH=keys/private.pem
RSA_PUBLIC_KEY_PATH=keys/public.pem

# File Upload Configuration
MAX_FILE_SIZE=52428800
UPLOAD_DIR=uploads

# Device Communication
DEVICE_TIMEOUT=30
MAX_CONNECTIONS_PER_USER=3

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_TIMEOUT=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Admin Configuration (comma-separated user IDs)
ADMIN_USER_IDS=123456789,987654321

# Rate Limiting
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Environment
ENVIRONMENT=development

# Docker Compose specific (for local development)
POSTGRES_PASSWORD=your-postgres-password-here